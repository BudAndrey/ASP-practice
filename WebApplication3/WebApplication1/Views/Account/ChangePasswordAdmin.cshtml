@model WebApplication1.Models.User

    <h1 class="text-center"> Enter new password </h1>

    <div class="text-center">
        <form asp-action="ChangePasswordAdmin" asp-controller="Account" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly" d></div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id)
                
                <div class=" m-2">
                    <input name="password" type="password" placeholder="password"/>
                </div>
                
                <input type="submit" value="Change" class="btn btn-info m-2 w-25" />
            </div>

        </form>
    </div>